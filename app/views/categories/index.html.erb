<%# Note: Not final look %>
<div class="container max-w-5xl mx-auto pt-8 pb-8">

    <h1 class="text-4xl font-bold tracking-tight text-center">Quests</h1>

    <div class="grid grid-cols-3 gap-8 mt-10 sm:grid-cols-8 lg:grid-cols-12 sm:px-8 xl:px-0">

        <% @categories.each do |category| %>
            <div class="quest h-80 relative flex flex-col items-center justify-between col-span-4 px-8 py-12 space-y-4 overflow-hidden bg-yellow-50 shadow-lg sm:rounded-xl">
                <div class="title">
                    <h2 class="text-xl font-medium text-gray-700">
                        <%= category.title %>
                    </h2>
                </div>
                <div class="description h-60">
                    <%# <h4 class="text-l font-medium text-gray-700 pt-4">
                        Description:
                    </h4> %>
                    <p class="text-base text-center text-gray-500 pt-4">
                        <%= category.description %>
                    </p>      
                </div>
                <div class="action flex space-x-8">
                    <%= link_to 'View', category_path(category), class: "btn btn-info" %>
                    <%= link_to 'Edit', edit_category_path(category), class: "btn btn-success" %>
                    <%= link_to 'Delete', category_path(category), class: "btn btn-warning", 
                                                                data: { confirm: "Are you sure?" },
                                                                method: :delete          
                    %>
                </div>
            </div>
        <% end %>
            <a href="/categories/new" class=" h-80 relative col-span-4 px-8 py-12 space-y-4 overflow-hidden bg-green-400 hover:bg-green-700 sm:rounded-xl">
                <div class="flex flex-col items-center justify-center h-full">
                    <i class="fa fa-plus text-8xl text-white" aria-hidden="true"></i>
                    <h1 class= "text-4xl text-white">Add Quest</h1>
                </div>
            </a>

    </div>

</div>
