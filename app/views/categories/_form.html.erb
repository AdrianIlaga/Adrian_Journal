
<div class="flex flex-col px-4 py-4">
    <%= f.label :title, class: "text-xl pb-4" %>
    <%= f.text_field :title, placeholder: "Quest title (required)", class: "border-gray-300 rounded-md px-4 py-2 w-full" %>
</div>
<div class="flex flex-col px-4 py-4">
    <%= f.label :description, class: "text-xl pb-4" %>
    <%= f.text_area :description, rows: 8, placeholder: "Describe your quest here (optional)", class:"px-4 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full border-gray-300 rounded-md"  %>
</div>
<div class="flex flex-col px-4 py-4">
    <%= f.submit "Submit", class: "btn btn-success"%>
</div>
