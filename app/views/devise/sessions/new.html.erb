<h1 class="page-header">Log-In</h1>

<div class="form-container">

  <div class="form-div col-span-6 col-start-4">

    <%= form_for(resource, as: resource_name, class: "form" ,url: session_path(resource_name)) do |f| %>
      <div class="flex flex-col px-4 py-2 pt-8">
        <%= f.label :email, class: "text-xl pb-2" %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-gray-300 rounded-md px-4 py-2 w-full" %>
      </div>

      <div class="flex flex-col px-4 py-4">
        <%= f.label :password, class: "text-xl pb-2" %><br />
        <%= f.password_field :password, autocomplete: "current-password", class: "border-gray-300 rounded-md px-4 py-2 w-full" %>
      </div>

      <!--<% if devise_mapping.rememberable? %>
        <div class="flex flex-col px-4 py-8 ml-2 w-10">
          <%= f.check_box :remember_me, class: "w-6 h-6 text-l" %>
          <%= f.label :remember_me, class: "text-md pb-2 w-32" %>
        </div>
      <% end %>-->

      <div class="flex flex-col px-4 pb-8 pt-8">
        <%= f.submit "Log-in", class: "btn btn-success" %>
      </div>
    <% end %>

  </div>
  
</div>

