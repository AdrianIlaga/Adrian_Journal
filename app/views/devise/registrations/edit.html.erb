<h1 class="page-header">Edit <%= resource_name.to_s.humanize %></h1>

<%= link_to "Go Back", :back, class: " relative btn btn-info -left-60 mt-4" %>

<div class="form-container">

  <div class="form-div col-span-6 col-start-4">

    <%= form_for(resource, as: resource_name, class: "form", url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="flex flex-col px-4 py-2 pt-8">
        <%= f.label :username, class: "text-xl"%><br />
        <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "border-gray-300 rounded-md px-4 py-2 w-full"%>
      </div>

      <div class="flex flex-col px-4 py-2">
        <%= f.label :email, class: "text-xl"%><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border-gray-300 rounded-md px-4 py-2 w-full"%>
      </div>

      <!--<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>-->

      <div class="flex flex-row w-full">

          <div class="flex flex-col px-4 py-2 w-1/2">
            <%= f.label "New Password", class: "text-xl"%> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "new-password", class: "border-gray-300 rounded-md px-4 py-2 w-full"%>
            <% if @minimum_password_length %>
              <br />
              
            <% end %>
          </div>

          <div class="flex flex-col px-4 py-2 w-1/2">
            <%= f.label "Confirm New Password", class: "text-xl"%><br /><br /><br />
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border-gray-300 rounded-md px-4 py-2 w-full"%>
          </div>
          
      </div>

      <!--<em><%= @minimum_password_length %> characters minimum</em>-->

       <div class="flex flex-col px-4">
          <%= f.label :current_password, class: "text-xl"%> <i>(we need your current password to confirm your changes)</i><br />
          <%= f.password_field :current_password, autocomplete: "current-password", class: "border-gray-300 rounded-md px-4 py-2 w-full"%>
        </div>

      <div class="flex flex-col px-4 py-6">
        <%= f.submit "Update", class: "btn btn-success" %>
      </div>
    <% end %>

    <!--

    <h3>Cancel my account</h3>

    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
    -->
    <!--<%= link_to "Back", :back %>-->


  </div>

</div>
