<!-- This example requires Tailwind CSS v2.0+ -->
<nav class="bg-gray-800 w-full">
  <div class="max-w-7xl mx-auto px-2 sm:px-6 lg:px-8">
    <div class="relative flex items-center justify-between h-16">

      <div class="flex-1 flex items-center justify-center sm:items-stretch sm:justify-start">
        <div class="flex-shrink-0 flex items-center">

          <%= image_tag "advenchore_logo_transparent.png", class: "hidden lg:block h-10 w-auto" %>
        </div>
        <div class="hidden sm:block sm:ml-6">
          <div class="flex space-x-4">
            <!-- Current: "bg-gray-900 text-white", Default: "text-gray-300 hover:bg-gray-700 hover:text-white" -->
            <% if user_signed_in? %>

              <a href="/categories" class="nav-inactive" aria-current="page">Questboard</a>

              <a href="/categories/new" class="nav-inactive">Add Quest</a>

              <a href="/" class="nav-inactive">Daily Tasks</a>

            <% else %>
            
              <%= link_to "Sign-Up", new_user_registration_path , class: "nav-inactive" %>

              <%= link_to "Log-In", new_user_session_path , class: "nav-inactive" %>

            <% end %>          

            <%# <a href="#" class="nav-inactive">Calendar</a> %>
          </div>
        </div>
      </div>
      <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">

        <!-- Profile dropdown -->
        <% if user_signed_in? %>
          <div class="ml-3 relative">
            <div id="nav-profile" >
              <%# <button type="button" class="bg-gray-800 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" id="user-menu-button" aria-expanded="false" aria-haspopup="true">
                <span class="sr-only">Open user menu</span>
                <img class="h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
              </button> %>
              <a href="javascript:void(0);" class="nav-inactive"><%= current_user.username %>  &#9660;</a>
            </div>

            <!--
              Dropdown menu, show/hide based on menu state.

              Entering: "transition ease-out duration-100"
                From: "transform opacity-0 scale-95"
                To: "transform opacity-100 scale-100"
              Leaving: "transition ease-in duration-75"
                From: "transform opacity-100 scale-100"
                To: "transform opacity-0 scale-95"
            -->
            <%# Note to future Adrian: MAKE THIS FUNCTIONAL USING JAVASCRIPT %>
            <div id="nav-profile-dropdown" class="origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5 focus:outline-none" role="menu" aria-orientation="vertical" aria-labelledby="user-menu-button" tabindex="-1">
              <!-- Active: "bg-gray-100", Not Active: "" -->
              <%# <a href="#" class="block px-4 py-2 text-sm text-gray-700" role="menuitem" tabindex="-1" id="user-menu-item-0">Edit Profile</a> %>

              <%= link_to "Edit Profile", edit_user_registration_path , class: "block px-4 py-2 text-sm text-gray-700" %>

              <%= link_to "Log-out", destroy_user_session_path , class: "block px-4 py-2 text-sm text-gray-700", method: :delete %>
            </div> 
          </div>
        <% end %>
      </div>
    </div>
  </div>

</nav>

