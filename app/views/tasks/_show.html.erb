<div class="flex flex-col w-full h-full items-center justify-center">   
    
    <div class="flex flex-row w-full justify-between items-center">

        <h1 class="relative text-4xl font-bold pl-14"><%= task.title %> </h1>

        <div class="flex flex-row">

            <%= link_to edit_category_task_path(@category, task), class: "flex justify-center items-center w-10 h-10 bg-yellow-400 rounded-lg text-white hover:bg-yellow-600 m-2"  do%>
                            <%= fa_icon "edit" %> 
                            <%# <p class="px-1 text-xl font-bold">Task</p> %>
            <% end %>
            <%= link_to category_task_path(@category, task), class: "flex justify-center items-center w-10 h-10 bg-red-400 rounded-lg text-white hover:bg-red-600 m-2", method: :delete  do %>
                            <%= fa_icon "trash-alt" %> 
                            <%# <p class="px-1 text-xl font-bold">Task</p> %>
            <% end %>
        </div>

    </div>

    <div class="flex flex-col w-5/6 h-full items-center justify-start">
        <br>
        <p class="text-2xl text-justify w-full"><%= task.description %> </p>
        <br>
        <div class="flex flex-col w-5/6">
            <p class="text-lg text-justify w-full py-2">Priority:
                <% case task.priority
                when 1
                    priority = "Urgent"
                when 2
                    priority = "High"
                when 3
                    priority = "Moderate"
                when 4
                    priority = "Low"
                when 5
                    priority = "Unimportant"
                end 
                %>

                <%= priority %>
            </p>
            <p class="text-lg text-justify w-full py-2">Due on: <%= task.due_date %> </p>
        </div>
        
    </div>

    <!--<% if task.completed == false %>

    <%# <button class="btn btn-success mb-8">Complete</button> %>

    <%= button_to "Complete", {} ,class: "btn btn-success mb-8"%>

    <% else %>

    <h3 class="mb-8 text-2xl text-green-400">=== Task Completed ===</h3>

    <% end %>-->

    <div class="flex flex-col items-center justify-center">
        <h3 class="text-2xl">Task Completion</h3>
        
        <%= form_with model: [@category, task], class: "form", local: true do |f| %>
            <%= f.check_box :completed, class: "w-8 h-8 text-l", onclick: "this.form.submit();" %> <br />
        <% end %>
    </div>

</div>
