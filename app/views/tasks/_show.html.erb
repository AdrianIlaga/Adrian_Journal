<div class="flex flex-col w-full h-full items-center justify-center">   
    
    <div class="flex flex-row w-full justify-end">

        <%= link_to edit_category_task_path(@category, task), class: "flex justify-center items-center w-10 h-10 bg-yellow-400 rounded-lg text-white hover:bg-yellow-600 m-2"  do%>
                        <%= fa_icon "edit" %> 
                        <%# <p class="px-1 text-xl font-bold">Task</p> %>
        <% end %>
        <%= link_to category_task_path(@category, task), class: "flex justify-center items-center w-10 h-10 bg-red-400 rounded-lg text-white hover:bg-red-600 m-2", method: :delete  do %>
                        <%= fa_icon "trash-alt" %> 
                        <%# <p class="px-1 text-xl font-bold">Task</p> %>
        <% end %>

    </div>

    <div class="flex flex-col w-5/6 h-full items-start justify-start">
        <h1 class="text-2xl font-bold text-center w-full"><%= task.title %> </h1>
        <p class="text-lg text-justify w-full">Description: <%= task.description %> </p>
        <p class="text-lg text-justify w-full">Priority:
            <%= task.priority %> 
        </p>
        <p class="text-lg text-justify w-full">Due on: <%= task.due_date %> </p>
        
    </div>

    <button class="btn btn-success">Complete</button>

</div>
