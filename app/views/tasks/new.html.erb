<div class="w-full flex flex-col items-center">
    <%= render "partials/errors", page: @task%>
</div>

<h1 class="page-header">New Task</h1>

<%= link_to "Go Back", category_path(@category), class: " relative btn btn-info right-1/4 mt-4" %>

<div class="form-container">

    <div class="form-div">
        <%= form_with model: [@category, @task], class: "form", local: true do |f| %>
            <%= render "form", f: f %>
        <% end %>
    </div>

</div>