<div class="flex flex-col px-4 py-2">
    <%= f.label :title, class: "text-xl pb-4" %>
    <%= f.text_field :title, placeholder: "Task title (required)", class: "border-gray-300 rounded-md px-4 py-2 w-full" %>
</div>
<div class="flex flex-col px-4 py-2">
    <%= f.label :description, class: "text-xl pb-4" %>
    <%= f.text_area :description, rows: 4, placeholder: "Describe your task here (optional)", class:"h-auto px-4 py-2 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 mt-1 block w-full border-gray-300 rounded-md" %>
</div>


<div class="flex flex-row w-full">
    <div class="flex flex-col px-4 py-2 w-1/2">
        <%= f.label :priority, class: "text-xl pb-4" %>
        <%= f.number_field :priority, :in => 1..5, :step => '1', class: "border-gray-300 rounded-md px-4 py-2 w-full"%>
    </div>
    <div class="flex flex-col px-4 py-2 w-1/2">
        <%= f.label :due_date, class: "text-xl pb-4" %>
        <%= f.date_field :due_date, class: "border-gray-300 rounded-md px-4 py-2 w-full" %>
    </div>
</div>

<div class="flex flex-col px-4 py-2">
    <%= f.label :completed, class: "text-xl" %> <br />
    <%= f.check_box :completed, class: "w-8 h-8 text-l" %> <br />
</div>
<div>
    <%= f.submit "Submit", class: "btn btn-success" %>
</div class="flex flex-col px-4 py-2">
